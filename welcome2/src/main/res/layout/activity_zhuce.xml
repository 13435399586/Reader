<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.welcome.ZhuCeActivity"
    android:id="@+id/context"
    android:background="#deb887">
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:background="#ff8c00"
	    android:orientation="horizontal" >
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="用户注册"
	        android:textColor="#ffffff"
	        android:textSize="20sp"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginBottom="10dp"
	    android:orientation="vertical" >
	    <EditText 
	        android:id="@+id/edtnum"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:hint="手机号"
	        android:inputType="number"
	        android:maxLines="1"
	        android:maxLength="11"
	        android:textColorHint="#98F898"/>
	    <EditText 
	        android:id="@+id/edtpassword"      
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="密码"
	        android:textColorHint="#DCDCDC"
	        android:textColor="#000000"
	        android:inputType="textPassword"/>
	    <EditText 
	        android:id="@+id/edtsureps"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="确认密码"
	        android:textColor="#000000"
	        android:textColorHint="#DCDCDC"
	        android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
	    android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" 
        android:orientation="horizontal">
        <CheckBox 
	        android:id="@+id/readpsw"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="显示密码"
	        android:textColor="#FFFFFF"/>
        <CheckBox 
	        android:id="@+id/button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:text="隐藏按钮"
	        android:textColor="#FFFFFF"/>
        <CheckBox 
	        android:id="@+id/writepsw"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_weight="1"
	        android:text="记住密码"
	        android:textColor="#FFFFFF"/>
    </LinearLayout> 
    <LinearLayout 
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
        android:orientation="horizontal">
	    <Button
	        android:id="@+id/zhuce"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_weight="1"
	        android:layout_marginRight="20dp"
	        android:text="注册"
	        android:background="@drawable/shape"
	        android:textColor="#FFFFFF"/>
	    <Button
	        android:id="@+id/denglu"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_weight="3"
	        android:text="返回登录"
	        android:background="@drawable/shape"
	        android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" 
            android:gravity="center"
            android:text="其他注册方式"
            android:textSize="15sp"
            android:textColor="#666666"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	        <ImageView
	            android:id="@+id/imgwb"
	            android:onClick="onclickImg"
	            android:layout_width="40dp"
	            android:layout_height="40dp"  
	            android:layout_weight="1"
	            android:src="@drawable/weibo"/>
	        <ImageView
	            android:id="@+id/imgqq"
	            android:onClick="onclickImg"
	            android:layout_width="40dp"
	            android:layout_height="40dp"  
	            android:layout_weight="1"
	            android:src="@drawable/qq"/>
	        <ImageView
	            android:id="@+id/imgwx"
	            android:onClick="onclickImg"
	            android:layout_width="40dp"
	            android:layout_height="40dp"  
	            android:layout_weight="1"
	            android:src="@drawable/weixin"/>
          </LinearLayout> 
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="注册代表你已经同意音乐服务和隐私条款"
            android:textSize="12sp"
            android:textColor="#dcdcdc"/>
    </LinearLayout>
</LinearLayout>
